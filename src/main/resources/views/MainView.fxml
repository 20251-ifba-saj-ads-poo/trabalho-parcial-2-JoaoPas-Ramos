<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.edu.ifba.saj.fwads.controller.MainController">
    <top>
        <ToolBar>
            <Button fx:id="btnPerfil" text="Perfil" onAction="#onPerfilClick"/>
            <Button fx:id="btnCadastrarSala" text="Cadastrar Sala" onAction="#onCadastrarSalaClick"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="tableSalas">
            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="150"/>
                <TableColumn fx:id="colCapacidade" text="Capacidade" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <padding>
        <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>
</BorderPane>
