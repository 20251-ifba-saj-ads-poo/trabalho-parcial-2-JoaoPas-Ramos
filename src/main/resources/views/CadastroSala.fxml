<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.edu.ifba.saj.fwads.controller.CadastroSalaController"
            prefWidth="720.0" prefHeight="480.0">

    <top>
        <BorderPane>
            <left>
                <Button fx:id="btnVoltar" text="âŸµ Voltar" onAction="#onVoltarClick"/>
            </left>
            <center>
                <Label text="Cadastrar Sala" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            </center>
            <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>
        </BorderPane>
    </top>

    <center>
        <GridPane hgap="14" vgap="12">
            <columnConstraints>
                <ColumnConstraints minWidth="140" halignment="RIGHT"/>
                <ColumnConstraints minWidth="260" hgrow="ALWAYS"/>
            </columnConstraints>

            <children>
                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNome" promptText="Ex.: LAB01" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <HBox spacing="8" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <children>
                        <ComboBox fx:id="cbTipo" editable="true" prefWidth="260"/>
                        <Button text="+ Novo tipo" onAction="#onNovoTipoClick"/>
                    </children>
                </HBox>
                <Label text="Capacidade:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCapacidade" promptText="Ex.: 30" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Recursos:" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
                <VBox spacing="8" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <children>
                        <HBox spacing="8">
                            <children>
                                <TextField fx:id="txtRecurso" promptText="Ex.: Projetor"/>
                                <Button text="Adicionar" onAction="#onAdicionarRecursoClick"/>
                            </children>
                        </HBox>
                        <ListView fx:id="listRecursos" prefHeight="220.0"/>
                        <Button text="Remover selecionado" onAction="#onRemoverRecursoClick"/>
                    </children>
                </VBox>
            </children>

            <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="btnSalvar" text="Salvar" onAction="#onSalvarClick"
                        style="-fx-padding: 8 16 8 16; -fx-font-weight: bold;"/>
            </children>
            <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>
        </HBox>
    </bottom>
    

</BorderPane>