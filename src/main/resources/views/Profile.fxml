<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.edu.ifba.saj.fwads.controller.ProfileController"
            prefWidth="820.0" prefHeight="560.0">

    <top>
        <BorderPane>
            <left>
                <Button fx:id="btnVoltar" text="⟵ Voltar" onAction="#onVoltarClick"/>
            </left>
            <right>
                <Button fx:id="btnLogout" text="Logout" onAction="#onLogoutClick"/>
            </right>
            <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>
        </BorderPane>
    </top>

    <center>
        <VBox spacing="14">
            <children>

                <Label text="Meu Perfil" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <GridPane hgap="10" vgap="6">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                        <ColumnConstraints minWidth="260" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="lblNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="E-mail:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="lblEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Matrícula:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="lblMatricula" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Tipo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="lblTipo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label fx:id="lblExtraTitulo" text="" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="lblExtraValor"  text="" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <Separator/>

                <Label text="Minhas reservas" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="tableReservas" prefHeight="360">
                    <columns>
                        <TableColumn fx:id="colSala" text="Sala" prefWidth="300"/>
                        <TableColumn fx:id="colData" text="Data" prefWidth="160"/>
                        <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="300"/>
                    </columns>
                </TableView>

            </children>
            <padding><Insets top="8" right="12" bottom="12" left="12"/></padding>
        </VBox>
    </center>

    <padding><Insets top="8" right="8" bottom="8" left="8"/></padding>
</BorderPane>