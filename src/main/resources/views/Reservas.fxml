<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.edu.ifba.saj.fwads.controller.ReservaController"
            prefWidth="820.0" prefHeight="560.0">

    <top>
        <BorderPane>
            <left>
                <Button fx:id="btnVoltar" text="⟵ Voltar" onAction="#onVoltarClick"
                        BorderPane.alignment="CENTER_LEFT"/>
            </left>
            <right>
                <Button fx:id="btnPerfil" text="Meu perfil" onAction="#onPerfilClick"
                        BorderPane.alignment="CENTER_RIGHT"/>
            </right>
            <padding>
                <Insets top="10" right="12" bottom="10" left="12"/>
            </padding>
        </BorderPane>
    </top>

    <center>
        <GridPane hgap="16" vgap="12">
            <columnConstraints>
                <ColumnConstraints percentWidth="55"/>
                <ColumnConstraints percentWidth="45"/>
            </columnConstraints>

            <children>
                <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <children>
                        <Label text="Reserva de Sala" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                        <GridPane hgap="8" vgap="6">
                            <children>
                                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label fx:id="lblNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label fx:id="lblTipo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Capacidade:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <Label fx:id="lblCapacidade" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>

                        <Separator/>

                        <Label text="Selecione o dia:"/>
                        <DatePicker fx:id="datePicker"/>

                        <HBox spacing="10">
                            <children>
                                <Label text="Legenda:"/>
                                <Label text="Indisponível" style="-fx-background-color: #ffdddd; -fx-padding: 2 6 2 6; -fx-text-fill: red; -fx-border-color: #ffaaaa; -fx-border-radius: 3; -fx-background-radius: 3;"/>
                            </children>
                        </HBox>

                        <Button fx:id="btnReservar" text="Reservar" onAction="#onReservarClick"
                                style="-fx-padding: 8 16 8 16; -fx-font-weight: bold;"/>
                    </children>
                </VBox>

                <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <children>
                        <Label text="Recursos" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <TableView fx:id="tableRecursos" prefHeight="380">
                            <columns>
                                <TableColumn fx:id="colRecurso" text="Recurso" prefWidth="260"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>

            <padding><Insets top="8" right="12" bottom="8" left="12"/></padding>
        </GridPane>
    </center>

    <padding>
        <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>
</BorderPane>